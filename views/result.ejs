<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="css/style.css" type="text/css">
        <title>Result</title>
    </head>
    <body>
        <div class="main">
            <h1>Result</h1>
            <% let items = Object.values(filteredItems); %>
            <% let category = Object.keys(filteredItems); %>
            <% for(let i = 0; i < items.length; i++) {%>
                <h2> <%= category[i] %> </h2>
                <ul class="list">
                    <% for(let j = 0; j < items[i].length; j++) {%>
                    <% let item = items[i][j] %>
                        <li class="list-item">
                            <img src="<%= item.icon %>" alt="<%= item.typeLine %>" class="list-item__img"/>
                            <div class="list-item__meta">
                                <h3 class="list-item__name"><%= item.typeLine %></h3>
                                <p class="list-item__amount">Amount: <%= item.stackSize %></p>
                            </div>
                        </li>
                    <% } %>
                </ul>
            <% } %>
        </div>
    </body>
</html>
