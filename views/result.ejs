<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="css/main.css" type="text/css">
        <title>Result</title>
    </head>
    <body>
        <div class="main">
            <div class="wrapper">
                <% let items = Object.values(organizedItems); %>
                <% let category = Object.keys(organizedItems); %>

                <div class="tabs">
                    <% for(let i = 0; i < items.length; i++) {%>
                    <div class="tab">
                        <input type="radio" name="tab" id="tab--<%=i%>" class="tab__input js-tab-input"
                        <% if(i === 0) {%>
                               checked
                                <%}%>
                        >
                        <label for="tab--<%=i%>" class="tab__label">
                            <%= category[i] %>
                        </label>
                    </div>
                    <% } %>
                </div>
                <div class="tab-result">
                    <div class="tab-sort">
                        <button class="tab-sort__btn">
                            Sort by name
                        </button>
                        <button class="tab-sort__btn">
                            Sort by value
                        </button>
                    </div>
                    <% for(let i = 0; i < items.length; i++) {%>
                        <div class="content js-content<%= i === 0 ? ' is-active' : ''%> " data-category="<%= category[i]%>">
                            <ul class="list">
                                <% for(let j = 0; j < items[i].length; j++) {%>
                                    <% let item = items[i][j] %>
                                    <% if (item.chaosValue === 0 || !item.chaosValue) { %>
                                        <% continue; %>
                                    <% } else { %>
                                        <li class="list-item">
                                            <div class="list-item__media">
                                                <img src="<%= item.icon %>" alt="<%= item.typeLine %>" class="list-item__img"/>
                                            </div>
                                            <div class="list-item__meta">
                                                <p class="list-item__amount">
                                                    <% if (!item.stackSize) { %>
                                                        x1
                                                    <% } else { %>
                                                        x<%= item.stackSize %>
                                                    <% } %>
                                                </p>
                                                <h3 class="list-item__name"><%= item.typeLine %></h3>
                                                <h4 class="list-item__value">
                                                    <%= item.chaosValue %> / <%= item.chaosValue *  Math.round( item.stackSize * 10 ) / 10 %>
                                                </h4>
                                            </div>
                                        </li>
                                    <% } %>
                                <% } %>
                            </ul>
                        </div>
                    <% } %>
                </div>
            </div>
            <a href="#" class="btn btn--scroll js-btn-scrolltop"></a>
        </div>
        <script type="module" src="js/main.js"></script>
    </body>
</html>
